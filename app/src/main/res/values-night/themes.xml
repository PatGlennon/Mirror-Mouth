        <item name="colorPrimary">@color/title_bar_color</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_title_bar_color</item>
        <item name="colorSecondaryVariant">@color/title_bar_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/baloo_2_semibold</item>
        <item name="android:windowBackground">@color/ic_launcher_background</item>
    </style>
