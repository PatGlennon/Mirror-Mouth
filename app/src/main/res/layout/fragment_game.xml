<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.game.GameFragment">

    <TextView
        android:id="@+id/word1text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="2dp"
        android:text="Testy"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/word1record"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/roundcorner"
        android:src="@drawable/recordbutton"
        app:layout_constraintBottom_toBottomOf="@+id/word1text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toEndOf="@+id/word1text"
        app:layout_constraintTop_toTopOf="@+id/word1text"
        app:layout_constraintVertical_bias="0.476" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/word1playback"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/roundcorner"
        android:src="@drawable/play_circle_24px"
        app:layout_constraintBottom_toBottomOf="@+id/word1record"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toEndOf="@+id/word1record"
        app:layout_constraintTop_toTopOf="@+id/word1record"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>