                <Button
                    android:id="@+id/record4"
                    android:layout_width="0dp"
                    android:layout_marginEnd="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/record" />
                <Button
                    android:id="@+id/playReverse4"
                    android:layout_width="0dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
