<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <LinearLayout
        android:id="@+id/page_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="RECORD WORDS"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="0:00"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/row0"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/word0"
                android:background="@drawable/item_background"
                android:layout_width="match_parent"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="25sp"
                android:layout_height="0dp"
                android:hint="@string/word_hint"
                android:inputType="textCapCharacters"
                android:autofillHints="@string/word_hint"
                android:textColorHint="@color/gray"/>

            <LinearLayout
                android:id="@+id/button_layout0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/listen0"
                    android:layout_width="0dp"
                    android:layout_marginEnd="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/listen" />
                <Button
                    android:id="@+id/record0"
                    android:layout_width="0dp"
                    android:layout_marginEnd="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/record" />
                <Button
                    android:id="@+id/playReverse0"
                    android:layout_width="0dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/reverse"
                    android:enabled="false"/>
                <Button
                    android:id="@+id/lock0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/lock_in"
                    android:enabled="false"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/row1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <EditText
