<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <TableRow
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/settings_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/settings"
            android:textSize="30sp" />

    </TableRow>

    <TableRow
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <TextView
            android:id="@+id/rounds_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Words"
            android:textSize="25sp" />
        <RadioGroup
            android:id="@+id/words_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="40dp"
                android:gravity="center"
                android:layout_marginEnd="1dp"
                android:layout_height="wrap_content"
                android:foreground="@drawable/ripple_first"
                android:background="@drawable/radio_selector_first"
                android:button="@android:color/transparent"
                android:text="1"
                android:textColor="@color/radio_text_selector" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="40dp"
                android:gravity="center"
                android:layout_marginEnd="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_selector"
                android:foreground="?attr/selectableItemBackground"
                android:button="@android:color/transparent"
                android:checked="true"
                android:text="2"
                android:textColor="@color/radio_text_selector" />
            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="40dp"
                android:gravity="center"
                android:layout_marginEnd="1dp"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:text="3"
                android:textColor="@color/radio_text_selector" />
            <RadioButton
                android:id="@+id/radio4"
                android:layout_width="40dp"
                android:gravity="center"
                android:layout_marginEnd="1dp"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:text="4"
                android:textColor="@color/radio_text_selector" />
            <RadioButton
                android:id="@+id/radio5"
                android:layout_width="40dp"
                android:gravity="center"
                android:foreground="@drawable/ripple_last"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_selector_last"
                android:button="@android:color/transparent"
                android:text="5"
                android:textColor="@color/radio_text_selector"
                android:layout_marginEnd="1dp"/>
        </RadioGroup>



    </TableRow>
    <TableRow
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >



    </TableRow>


</TableLayout>